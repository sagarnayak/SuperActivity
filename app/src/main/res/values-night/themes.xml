<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SuperActivity" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="dialogPrimaryTextColor">?attr/dialogPrimaryTextColor</item>
        <item name="dialogButtonTextColor">?attr/dialogButtonTextColor</item>
        <item name="dialogDefaultBackground">?attr/dialogDefaultBackground</item>
        <item name="dialogButtonBackgroundColor">?attr/dialogButtonBackgroundColor</item>

        <item name="dialogTextFont">?attr/dialogTextFont</item>
        <item name="dialogButtonFont">?attr/dialogButtonFont</item>

        <item name="dialogTextSize">?attr/dialogTextSize</item>
        <item name="dialogButtonSize">?attr/dialogButtonSize</item>
        <item name="dialogCornerRadius">?attr/dialogCornerRadius</item>
        <item name="dialogButtonHeight">?attr/dialogButtonHeight</item>

        <item name="dialogFailedDefaultString">?attr/dialogFailedDefaultString</item>
        <item name="dialogUploadingDefaultString">?attr/dialogUploadingDefaultString</item>
        <item name="dialogSuccessDefaultString">?attr/dialogSuccessDefaultString</item>
        <item name="dialogDefaultCancelText">?attr/dialogDefaultCancelText</item>
        <item name="dialogDefaultOKText">?attr/dialogDefaultOKText</item>
        <item name="dialogDefaultProcessingText">?attr/dialogDefaultProcessingText</item>
    </style>
</resources>